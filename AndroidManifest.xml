<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="jim.h.common.android.zxingjar.demo" android:versionCode="2"
	android:versionName="1.1">
	<uses-sdk android:minSdkVersion="8" />
	<supports-screens android:largeScreens="true"
		android:normalScreens="true" android:smallScreens="true"
		android:anyDensity="true" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.wifi" />
	<application 
	     android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
		<activity android:name="jim.h.common.android.zxingjar.demo.Splash" 
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
            android:name="jim.h.common.android.zxingjar.demo.TabHostActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="jim.h.common.android.zxingjar.demo.History"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="jim.h.common.android.zxingjar.demo.Rewards"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="jim.h.common.android.zxingjar.demo.Login"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="jim.h.common.android.zxingjar.demo.Scan"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="jim.h.common.android.zxingjar.demo.getDetails"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan"
            >
        </activity>
        <activity
            android:name="jim.h.common.android.zxingjar.demo.showDetails"
            android:label="@string/app_name" >
        </activity>
		<activity android:name="jim.h.common.android.zxinglib.CaptureActivity"
			android:screenOrientation="landscape"
			android:configChanges="orientation|keyboardHidden"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:windowSoftInputMode="stateAlwaysHidden" />
	</application>

	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> 
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
</manifest>